<html>
{{#each foo}}
{{this}}
{{/each}}
		<link rel="stylesheet" href="./style.css" media="screen">
<h3>Add new doctor:</h3>
<form id="addperson" action="/doctor" method="post">
    Doctor First Name: <input type="text" name="doctor_first_name"><br>
    Doctor Last Name: <input type="text" name="doctor_last_name"><br>
    Doctor Contact: <input type="text" name="doctor_contact"><br>
    
    <input type="submit" value="Submit">
 </form>
<br/>



<h3>Current Doctor:</h3>
<table>
    <thead> 
        <th>ID</th> 
        <th>First Name</th> 
        <th>Last Name</th>
        <th>Contact</th>  
    </thead> 
    <tbody>
        {{#each doctor}} 
        <tr> 
            	<td>{{id}}</td> 
            <td>{{doctor_first_name}}</td> 
            <td>{{doctor_last_name}}</td> 
            <td>{{doctor_contact}}</td> 
            <td><button onclick="deletedoctor({{id}})">Delete</button></td>
			<td><a href="/doctor/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>