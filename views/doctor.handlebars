<html>
  {{#each foo}}
    {{this}}
  {{/each}}
  <h1>Doctor</h1>
  <h3>Add New Doctor (Please fill in all Input Fields):</h3>
  <h4>{{insert_error}}</h4>
  <form
    id="addperson"
    action="/doctor"
    method="post"
    onkeydown="return event.key != 'Enter';"
  >
    Doctor First Name:
    <input
      type="text"
      name="doctor_first_name"
      placeholder="Enter Doctor First Name"
    />
	<br>
	 (Letters and Hyphens Only)
	<br />

	 <br>
    Doctor Last Name:
    <input
      type="text"
      name="doctor_last_name"
      placeholder="Enter Doctor Last Name"
    /><br />
 (Letters and Hyphens Only)
 <br>
 <br>
    Doctor Contact:
    <input
      type="text"
      name="doctor_contact"
      placeholder="Enter Doctor Contact (Phone Number)"
    /><br />
	 (Numbers and Hyphens Only)
	 <br>
	 <br>
    <input type="submit" value="Submit" />
  </form>
  <br />

  <form
    id="search_people"
    action=""
    method=""
    onkeydown="return event.key != 'Enter';"
  >
    <label> Search for Doctor by First Name:</label>
    <h4>{{search_error}}</h4>
    <input
      id="search_string"
      type="text"
      name="search_string"
      value=""
      placeholder="Enter Doctor First Name"
    />
    <input type="button" value="Search" onclick="searchDoctor()" />
    <button type = "button"><a class = "blacklink" href="/doctor">Cancel Search</a></button>

  </form>

  <h3>Current Doctor:</h3>
  <table>
    <thead>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Contact</th>
    </thead>
    <tbody>
      {{#each doctor}}
        <tr>
          <td>{{id}}</td>
          <td>{{doctor_first_name}}</td>
          <td>{{doctor_last_name}}</td>
          <td>{{doctor_contact}}</td>
          <td><button onclick="deletedoctor({{id}})">Delete</button></td>
		  <td><button onclick= "location.href='/doctor/{{id}}'">Update</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</html>