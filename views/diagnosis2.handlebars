<html>
{{#each foo}}
{{this}}
{{/each}}
<div>
<h3> MediPhar </h3>
    <form id="add_people_certificates" action="/diagnosis2" method="post">
    Medication ID: <select name='medication_id'>
        {{#each medication2}}
          <option value='{{medication_id}}'>{{medication_id}}</option>
        {{/each}}
    </select>
    <br>
	    Pharmacy ID: <select name='pharmacy_id'>
        {{#each pharmacy2}}
          <option value='{{pharmacy_id}}'>{{pharmacy_id}}</option>
        {{/each}}
    </select><br>
    <input type="submit" value="Submit">
    </form>
</div>
<br/>

<h3>Current Medication & Pharmacy:</h3>
<table>
    <thead> 
        <th>Medication ID</th> 
        <th>Pharmacy iD</th> 
    </thead> 
    <tbody> 
        {{#each people_with_certs}} 
        <tr> 
            <td>{{name}}</td> 
            <td>{{certificate}}</td> 
            <td><button onclick="deletePeopleCert({{pid}},{{cid}})">Delete</button></td>
            <td><a href='#' onclick='javascript: alert("You can implement it just like the Add form.")'>Update</a></td>
        </tr>
        {{else}}
        <b> No people with any certifications found! Grant some using the form. </b>
        {{/each}} 

    </tbody>
</table> 
</html>