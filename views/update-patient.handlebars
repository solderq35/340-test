<html>

  <h1>Update Patient
    {{patient.id}}
    ({{patient.patient_first_name}}
    {{patient.patient_last_name}})</h1>

  <!---Error message for invalid update inputs -->
  <h4>{{update_error}}</h4>

  <!---Update Patient Entity Form -->
  <form
    id="update-patient"
    action="/patient"
    method="post"
    onkeydown="return event.key != 'Enter';"
  >
    First name:
    <input
      type="text"
      name="patient_first_name"
      value="{{patient.patient_first_name}}"
    /><br />
    (Letters, Ampersand, Hyphens Only)
    <br />
    <br />
    Last name:
    <input
      type="text"
      name="patient_last_name"
      value="{{patient.patient_last_name}}"
    /><br />
    (Letters, Ampersand, Hyphens Only)
    <br />
    <br />
    Birth:
    <input
      type="date"
      name="patient_birth"
      value="{{patient.patient_birth}}"
    /><br />
    <br />
    Address:
    <input
      type="text"
      name="patient_address"
      value="{{patient.patient_address}}"
    /><br />
    <br />
    Email:
    <input
      type="text"
      name="patient_email"
      value="{{patient.patient_email}}"
    /><br />
    <br />
    Contact:
    <input
      type="text"
      name="patient_contact"
      value="{{patient.patient_contact}}"
    /><br />
    (Numbers and Hyphens Only)
    <br />

  </form>

  <!---Finalize Update Buttons -->
  <button onclick="updatePatient({{patient.id}})">Update</button>
  <td><button onclick="location.href='/patient'">Cancel Update</button></td>
</html>