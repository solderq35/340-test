<html>
  {{#each foo}}
    {{this}}
  {{/each}}
  <h1>Pharmacy</h1>
  <h3>Add new Pharmacy (Please fill in all Input Fields):</h3>
  
  <!--- Error message for invalid insertion inputs -->
  <h4>{{insert_error}}</h4>
  
  <!--- Form to insert new Pharmacy entry -->
  <form
    id="addperson"
    action="/pharmacy"
    method="post"
    onkeydown="return event.key != 'Enter';"
  >
    Pharmacy Name:
    <input
      type="text"
      name="pharmacy_name"
      placeholder="Enter Pharmacy Name"
    /><br />
    (Letters and Hyphens Only)
    <br />
    <br />
    Pharmacy Address:
    <input
      type="text"
      name="pharmacy_address"
      placeholder="Enter Pharmacy Address"
    /><br />
    <br />
    Pharmacy Contact:
    <input
      type="text"
      name="pharmacy_contact"
      placeholder="Enter Pharmacy Contact (Phone #)"
    /><br />
    (Numbers and Hyphens Only)
    <br />
    <br />

    <input type="submit" value="Submit" />
  </form>
  <br />

  <form
    id="search_people"
    action=""
    method=""
    onkeydown="return event.key != 'Enter';"
  >
    <label> Search for Pharmacy by Name:</label>
	
	<!--- Error message for invalid search inputs -->
    <h4>{{search_error}}</h4>
	
	<!--- Search Input Form -->
    <input
      id="search_string"
      type="text"
      name="search_string"
      value=""
      placeholder="Enter Pharmacy Name"
    />
    <input type="button" value="Search" onclick="searchPharmacy()" />
    <button type="button"><a class="blacklink" href="/pharmacy">Cancel Search</a></button>

  </form>

  <!--- Display Current Patient Entity Table -->
  <h3>Current Pharmacy:</h3>
  <table>
    <thead>
      <th>ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Contact</th>
    </thead>
    <tbody>
      {{#each pharmacy}}
        <tr>
          <td>{{id}}</td>
          <td>{{pharmacy_name}}</td>
          <td>{{pharmacy_address}}</td>
          <td>{{pharmacy_contact}}</td>
		  
		  <!--- Delete and Update Buttons -->
          <td><button onclick="deletepharmacy({{id}})">Delete</button></td>
          <td><button
              onclick="location.href='/pharmacy/{{id}}'"
            >Update</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</html>