<html>
{{#each foo}}
{{this}}
{{/each}}
<h3>Add new Pharmacy:</h3>
<form id="addperson" action="/pharmacy" method="post">
    Pharmacy Name: <input type="text" name="pharmacy_name"><br>
    Pharmacy Address: <input type="text" name="pharmacy_address"><br>
    Pharmacy Contact: <input type="text" name="pharmacy_contact"><br>
    
    <input type="submit" value="Submit">
 </form>
<br/>

<h3>Current Pharmacy:</h3>
<table>
    <thead> 
        <th>ID</th> 
        <th>Name</th> 
        <th>Address</th>
        <th>Contact</th>  
    </thead> 
    <tbody>
        {{#each pharmacy}} 
        <tr> 
            <td>{{pharmacy_id}}</td> 
            <td>{{pharmacy_name}}</td> 
            <td>{{pharmacy_address}}</td> 
            <td>{{pharmacy_contact}}</td> 
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>