<html>
{{#each foo}}
{{this}}
{{/each}}
<h3>Add new Diagnosis:</h3>
    <form id="add_people_certificates" action="/diagnosis" method="post">
    Medication ID: <select name='medication_id'>
        {{#each medication2}}
          <option value='{{medication_id}}'>{{medication_id}}</option>
        {{/each}}
    </select>
	 <br>
	    Patient ID: <select name='patient_id'>
        {{#each patient2}}
          <option value='{{patient_id}}'>{{patient_id}}</option>
        {{/each}}
    </select><br>
		 <br>
	    Doctor ID: <select name='doctor_id'>
        {{#each doctor1}}
          <option value='{{doctor_id}}'>{{doctor_id}}</option>
        {{/each}}
    </select><br>
    <br>
	    Pharmacy ID: <select name='pharmacy_id'>
        {{#each pharmacy2}}
          <option value='{{pharmacy_id}}'>{{pharmacy_id}}</option>
        {{/each}}
    </select><br>

	Description: <input type="text" name="description"><br>
	
	<h4>	Note: Please use integer values for the Charge input! </h4>
	Charge: <input type="int" name="charge"><br>
	Date: <input type="date" name="diagnosis_date"><br>
	<script language = Javascript>
		var moment = require('moment');
	var diagnosis_date = moment(diagnosis_date).format('YYYY/MM/DD HH:MM:SS').toISOString();
	</script>
    <input type="submit" value="Submit">
 </form>
<br/>


<h3>Current Diagnosis:</h3>
<table>
    <thead> 
		<th>Diagnosis ID </th>
        <th>Medication ID</th> 
        <th>Patient ID</th> 
		<th>Doctor ID</th> 
		<th>Pharmacy ID</th> 
		<th>Description</th> 
		<th>Charge</th> 
		<th>Diagnosis Date</th> 
    </thead> 
    <tbody>
        {{#each diagnosis}} 
        <tr> 
			<td>{{diagnosis_id}}</td> 
            <td>{{medication_id}}</td> 
			<td>{{patient_id}}</td> 
			<td>{{doctor_id}}</td> 
            <td>{{pharmacy_id}}</td> 
			<td>{{description}}</td> 
			<td>{{charge}}</td> 
			<td>{{diagnosis_date}}</td> 
        </tr> 
        {{/each}} 
    </tbody> 
</table> 

</html>