<html>
{{#each foo}}
{{this}}
{{/each}}

		<h1>Diagnosis</h1>
<h3>Add new Diagnosis (Please fill in all Input Fields):</h3>
<h4>{{errormessage}}</h4>
    <form id="add_people_certificates" action="/diagnosis" method="post">
	Diagnosis Name: <input type="text" name="diagnosis_name"  placeholder="Enter Diagnosis Name">  <br>
    Medication ID: <select name='medication_id'>
        {{#each medication}}
          <option value='{{medication_id}}',>{{medication_id}} ({{medication_name}})</option>
        {{/each}}
    </select>
	 <br>
	    Patient ID: <select name='patient_id'>
        {{#each patient2}}
          <option value='{{patient_id}}'>{{patient_id}} ({{patient_fullname}})</option>
        {{/each}}
    </select><br>
		 <br>
	    Doctor ID: <select name='doctor_id'>
        {{#each doctor1}}
          <option value='{{doctor_id}}'>{{doctor_id}} ({{doctor_fullname}})</option>
        {{/each}}
    </select><br>
    <br>
	    Pharmacy ID: <select name='pharmacy_id'>
        {{#each pharmacy2}}
          <option value='{{pharmacy_id}}'>{{pharmacy_id}} ({{pharmacy_name}})</option>
        {{/each}}
    </select><br>
	
	Charge <input type="decimal" name="charge"  placeholder="Enter Charge (USD)"> <br>
	Date: <input type="date" name="diagnosis_date">   <br>

    <input type="submit" value="Submit">
 </form>
<br/>


<h3>Current Diagnosis:</h3>
<table>
    <thead> 
		<th>Diagnosis ID </th>
		<th>Diagnosis Name</th> 
        <th>Med ID</th> 
		<th>Med Name</th>
        <th>Patient ID</th> 
		<th>Patient Name</th>
		<th>Doctor ID</th> 
		<th>Doctor Name</th>
		<th>Pharma ID</th> 
		<th>Pharma Name</th>
		<th>Charge ($)</th> 
		<th>Diagnosis Date</th> 
    </thead> 
    <tbody>
        {{#each diagnosis}} 
        <tr> 
			<td>{{id}}</td> 
			<td>{{diagnosis_name}}</td>
            <td>{{medication_id}}</td> 
			<td>{{medication_name}}</td>
			<td>{{patient_id}}</td> 
			<td>{{patient_fullname}}</td> 
			<td>{{doctor_id}}</td> 
			<td>{{doctor_fullname}}</td>
            <td>{{pharmacy_id}}</td> 
			<td>{{pharmacy_name}}</td> 
			<td>{{charge2}}</td> 
			<td>{{diagnosis_date}}</td> 
			            <td><button onclick="deletediagnosis({{id}})">Delete</button></td>
			<td><a href="/doctor/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 

</html>