<html>
  <h1>Update {{person.fname}} {{person.lname}}:</h1>
  <form
    id="update-person"
    action="/people"
    method="post"
    onkeydown="return event.key != 'Enter';"
  >
    First name:
    <input type="text" name="fname" value="{{person.fname}}" /><br />
    Last name:
    <input type="text" name="lname" value="{{person.lname}}" /><br />

    Age:
    <input type="number" name="age" value="{{person.age}}" /><br />
  </form>
  <button onclick="updatePerson({{person.id}})">Update</button>

</html>